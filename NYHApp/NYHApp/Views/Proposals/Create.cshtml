@model NYHApp.Models.Proposal

@{
    ViewData["Title"] = "Create";
}

@using (Html.BeginForm("Create", "Proposals", FormMethod.Post, new { @class = "form-group", id = "ProposalMainForm", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.IdHelp)
    @Html.HiddenFor(model => model.IdEnterprise)
    <div class="card">
        <div class="card-header bg-dark text-light">
            <label class="card-title col-xs-12 col-md-12 col-lg-12">@Model.Help.Title</label>
        </div>
        <div class="card-body">
            @if (User.IsInRole("User") || User.IsInRole("Enterprise"))
            {
                <div class="row">
                    @Html.LabelFor(model => model.Help.Description, new { @class = "control-label col-xs-12 col-md-12 col-lg-12" })
                    <span class="col-xs-12 col-md-12 col-lg-12 pt-0">@Html.DisplayFor(model => model.Help.Description)</span>
                </div>
                <div class="form-row pt-3">
                    <div class="form-group col-xs-12 col-md-2 col-lg-2">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Help.IsMansonry" /> @Html.DisplayNameFor(model => model.Help.IsMansonry)
                            </label>
                        </div>
                    </div>
                    <div class="form-group col-xs-12 col-md-2 col-lg-2">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Help.IsPainting" /> @Html.DisplayNameFor(model => model.Help.IsPainting)
                            </label>
                        </div>
                    </div>
                    <div class="form-group col-xs-12 col-md-2 col-lg-2">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Help.IsNewWork" /> @Html.DisplayNameFor(model => model.Help.IsNewWork)
                            </label>
                        </div>
                    </div>
                    <div class="form-group col-xs-12 col-md-2 col-lg-2">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Help.IsExtension" /> @Html.DisplayNameFor(model => model.Help.IsExtension)
                            </label>
                        </div>
                    </div>
                    <div class="form-group col-xs-12 col-md-2 col-lg-2">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Help.IsReform" /> @Html.DisplayNameFor(model => model.Help.IsReform)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div id="listImages"></div>
                </div>
            }
        </div>
    </div>
    <div class="card mt-5">
        <div class="card-header bg-dark text-light">
            <label class="card-title col-xs-12 col-md-12 col-lg-12">@NYHApp.Resources.Proposal.Resource.Proposal</label>
        </div>
        <div class="card-body">
            <div class="form-row">
                <div class="form-group col-xs-12 col-md-12 col-lg-12">
                    @Html.LabelFor(model => model.Description, new { @class = "control-label required" })
                    @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-row form-group">
                <a class="btn btn-secondary border-dark rounded col-xs-12 col-md-1 col-lg-1 pr-lg-1 pr-md-1" id="addLineProposal">+</a>
                @Html.Editor("LineProposalDescription", new { htmlAttributes = new { @class = "form-control col-xs-12 col-md-9 col-lg-9 pr-lg-1 pr-md-1", placeholder = NYHApp.Resources.Proposal.Resource.Description } })
                <div class="input-group col-xs-12 col-md-2 col-lg-2 pr-lg-1 pr-md-1">
                    @Html.Editor("LineProposalPrice", new { htmlAttributes = new { @class = "form-control" } })
                    <label class="input-group-append" for="LineProposalPrice">
                        <a class="btn btn-default"><i class="fas fa-euro-sign"></i></a>
                    </label>
                </div>
            </div>
            <div class="form-row">
                <div class="col-xs-12 col-md-6 col-lg-6 mx-auto" id="TableLinesProposals">
                    <div class="table-responsive">
                        <table class="table table-info">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayName(NYHApp.Resources.Proposal.Resource.Description)
                                    </th>
                                    <th>
                                        @Html.DisplayName(NYHApp.Resources.Proposal.Resource.Price)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.LinesProposals != null)
                                {
                                    foreach (var item in Model.LinesProposals)
                                    {
                                        <tr>
                                            @Html.HiddenFor(modelItem => item.IdLineProposal)
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Price)
                                            </td>
                                            <td>
                                                <a class='btn btn-danger' id='buttonEliminarFichero'><i class='far fa-trash-alt'></i></a>
                                            </td>
                                        </tr>
                                    }

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-row col-xs-12 col-md-12 col-lg-12 mb-2 pl-0 d-flex mt-2">
        <div class="col-xs-12 col-md-2 col-lg-2">
            <a class="btn btn-secondary col-xs-12 col-md-12 col-lg-12 border-dark text-dark" href="/"><i class="fas fa-ban"></i> @NYHApp.Resources.Shared.Resource.Cancel</a>
        </div>
        <div class="col-xs-12 col-md-2 col-lg-2">
            <button type="submit" class="btn btn-info col-xs-12 col-md-12 col-lg-12"><i class="far fa-save"></i> @NYHApp.Resources.Shared.Resource.Save</button>
        </div>
    </div>
}

@section Scripts{
    <script>
        $('body').on('click', '#addLineProposal', function (e) {
            e.preventDefault();
            if ($('#LineProposalDescription').val() != null && $('#LineProposalPrice').val() != null) {
                var Description = $('#LineProposalDescription').val();
                var Price = $('#LineProposalPrice').val()
                $("#TableLinesProposals").find('tbody').append("<tr>"
                    + "<td>"
                    + Description
                    + "</td>"
                    + "<td>"
                    + Price
                    + "</td>"
                    + "<td>"
                    + "<div class='paddingRigth0'>"
                    + "<a class='btn btn-danger' id='buttonEliminarFichero'><i class='far fa-trash-alt'></i></a>"
                    + "</div>"
                    + "</td>"
                    + "</tr>"
                )
                $('#LineProposalDescription').val("")
                $('#LineProposalPrice').val("")
            }
        })

        $('body').on('click', '#buttonEliminarFichero', function (e) {
            e.preventDefault();
            $(this).closest('td').closest('tr').remove(); 
        })
    </script>
}

