@model NYHApp.ViewModels.ProposalsViewModels.ProposalHelpViewModel

@{
    ViewData["Title"] = "Create";
}

@using (Html.BeginForm("Create", "Proposals", FormMethod.Post, new { @class = "form-group", id = "ProposalMainForm", }))
{
    @Html.HiddenFor(model => model.Proposal.IdHelp)
    @Html.HiddenFor(model => model.Proposal.IdEnterprise)
    <div class="card">
        <div class="card-header bg-dark text-light">
            <label class="card-title col-xs-12 col-md-12 col-lg-12">@Model.Proposal.Help.Title</label>
        </div>
        <div class="card-body">
            @if (User.IsInRole("User") || User.IsInRole("Enterprise"))
            {
                <div class="row">
                    @Html.LabelFor(model => model.Proposal.Help.Description, new { @class = "control-label col-xs-12 col-md-12 col-lg-12" })
                    <span class="col-xs-12 col-md-12 col-lg-12 pt-0">@Html.DisplayFor(model => model.Proposal.Help.Description)</span>
                </div>
                <div class="row mt-4">
                    <label class="col-xs-12 col-md-3 col-lg-3">
                        <input asp-for="@Model.Proposal.Help.IsPainting" class="changeDedication" id="isPainting" disabled /> @Html.DisplayNameFor(model => model.Proposal.Help.IsPainting)
                    </label>
                    <label class="col-xs-12 col-md-3 col-lg-3">
                        <input asp-for="@Model.Proposal.Help.IsMansonry" class="changeDedication" id="isMansonry" disabled /> @Html.DisplayNameFor(model => model.Proposal.Help.IsMansonry)
                    </label>
                    <label class="col-xs-12 col-md-3 col-lg-3">
                        <input asp-for="@Model.Proposal.Help.IsPlumbing" class="changeDedication" id="isPlumbing" disabled /> @Html.DisplayNameFor(model => model.Proposal.Help.IsPlumbing)
                    </label>
                    <label class="col-xs-12 col-md-3 col-lg-3">
                        <input asp-for="@Model.Proposal.Help.IsElectricity" class="changeDedication" id="isElectricity" disabled /> @Html.DisplayNameFor(model => model.Proposal.Help.IsElectricity)
                    </label>

                    <div class="d-none col-xs-12 col-md-6 col-lg-6" id="tablePainting">
                        <div class="table-responsive">
                            <table class="table table-light">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.LabelFor(z => z.Proposal.Help.IsPainting)
                                        </th>
                                        <th>
                                            @Html.Label(NYHApp.Resources.Enterprise.Resource.Dedication)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @Html.EditorFor(model => model.HelpsTypesJobPainting)
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="d-none col-xs-12 col-md-6 col-lg-6" id="tableMansonry">
                        <div class="table-responsive">
                            <table class="table table-light">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.LabelFor(z => z.Proposal.Help.IsMansonry)
                                        </th>
                                        <th>
                                            @Html.Label(NYHApp.Resources.Enterprise.Resource.Dedication)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @Html.EditorFor(model => model.HelpsTypesJobMansonry)
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="d-none col-xs-12 col-md-6 col-lg-6" id="tablePlumbing">
                        <div class="table-responsive">
                            <table class="table table-light">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.LabelFor(z => z.Proposal.Help.IsPlumbing)
                                        </th>
                                        <th>
                                            @Html.Label(NYHApp.Resources.Enterprise.Resource.Dedication)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @Html.EditorFor(model => model.HelpsTypesJobPlumbing)
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="d-none col-xs-12 col-md-6 col-lg-6" id="tableElectricity">
                        <div class="table-responsive">
                            <table class="table table-light">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.LabelFor(z => z.Proposal.Help.IsElectricity)
                                        </th>
                                        <th>
                                            @Html.Label(NYHApp.Resources.Enterprise.Resource.Dedication)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @Html.EditorFor(model => model.HelpsTypesJobElectricity)
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="row" id="listImages">
                    @if (Model.Proposal.Help.Photos != null)
                    {
                        @foreach (var item in Model.Proposal.Help.Photos)
                        {
                            <img src="@item.Path" class="thumb" alt="@item.FileName">
                        }
                    }
                </div>
            }
        </div>
    </div>
    <div class="card mt-5">
        <div class="card-header bg-dark text-light">
            <label class="card-title col-xs-12 col-md-12 col-lg-12">@NYHApp.Resources.Proposal.Resource.Proposal</label>
        </div>
        <div class="card-body">
            <div class="form-row">
                <div class="form-group col-xs-12 col-md-12 col-lg-12">
                    @Html.LabelFor(model => model.Proposal.Description, new { @class = "control-label required" })
                    @Html.TextAreaFor(model => model.Proposal.Description, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Proposal.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-row form-group">
                <a class="btn btn-secondary border-dark rounded col-xs-12 col-md-1 col-lg-1 pr-lg-1 pr-md-1" id="addLineProposal">+</a>
                @Html.Editor("LineProposalDescription", new { htmlAttributes = new { @class = "form-control col-xs-12 col-md-9 col-lg-9 pr-lg-1 pr-md-1", placeholder = NYHApp.Resources.Proposal.Resource.Description } })
                <div class="input-group col-xs-12 col-md-2 col-lg-2 pr-lg-1 pr-md-1">
                    @Html.Editor("LineProposalPrice", new { htmlAttributes = new { @class = "form-control" } })
                    <label class="input-group-append" for="LineProposalPrice">
                        <a class="btn btn-default"><i class="fas fa-euro-sign"></i></a>
                    </label>
                </div>
            </div>
            <div class="form-row">
                <div class="col-xs-12 col-md-10 col-lg-10 mx-auto" id="TableLinesProposals">
                    <div class="table-responsive">
                        <table class="table table-info">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayName(NYHApp.Resources.Proposal.Resource.Description)
                                    </th>
                                    <th>
                                        @Html.DisplayName(NYHApp.Resources.Proposal.Resource.Price)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Proposal.LinesProposals != null)
                                {
                                    @Html.EditorFor(model => model.Proposal.LinesProposals)
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-row col-xs-12 col-md-12 col-lg-12 mb-2 pl-0 d-flex mt-2">
        <div class="col-xs-12 col-md-2 col-lg-2">
            <a class="btn btn-secondary col-xs-12 col-md-12 col-lg-12 border-dark text-dark" href="/"><i class="fas fa-ban"></i> @NYHApp.Resources.Shared.Resource.Cancel</a>
        </div>
        <div class="col-xs-12 col-md-2 col-lg-2">
            <button type="submit" class="btn btn-info col-xs-12 col-md-12 col-lg-12"><i class="far fa-save"></i> @NYHApp.Resources.Shared.Resource.Save</button>
        </div>
    </div>
}

@section Scripts{
    <script>

        $('body').on('click', '#addLineProposal', function (e) {
            e.preventDefault();
            if ($('#LineProposalDescription').val() != null && $('#LineProposalPrice').val() != null
                && $('#LineProposalDescription').val() != "" && $('#LineProposalPrice').val() != "") {
                var Description = $('#LineProposalDescription').val();
                var Price = $('#LineProposalPrice').val()
                $("#TableLinesProposals").find('tbody').append("<tr>"
                    + "<input type='hidden' name='Proposal.LinesProposals[" + contador + "].IdLineProposal'/>"
                    + "<td>"
                    + "<input type='hidden' name='Proposal.LinesProposals[" + contador + "].Description' value='" + Description + "'/>"
                    + Description
                    + "</td>"
                    + "<td>"
                    + "<input type='hidden' name='Proposal.LinesProposals[" + contador + "].Price' value='" + Price + "'/>"
                    + Price + '€'
                    + "</td>"
                    + "<td>"
                    + "<div class='paddingRigth0'>"
                    + "<a class='btn btn-danger' id='buttonEliminarFichero'><i class='far fa-trash-alt'></i></a>"
                    + "</div>"
                    + "</td>"
                    + "</tr>"
                )
                contador = contador + 1;
                $('#LineProposalDescription').val("")
                $('#LineProposalPrice').val("")
            }
        })

        $('body').on('click', '#buttonEliminarFichero', function (e) {
            e.preventDefault();
            $(this).closest('td').closest('tr').remove();
            contador = contador - 1;
        })
        var contador = 0;
        $(document).ready(function () {
            if ($('#isPainting').is(':checked')) {
                activeTable($("#tablePainting"));
            }
            if ($('#isMansonry').is(':checked')) {
                activeTable($("#tableMansonry"));
            }
            if ($('#isPlumbing').is(':checked')) {
                activeTable($("#tablePlumbing"));
            }
            if ($('#isElectricity').is(':checked')) {
                activeTable($("#tableElectricity"));
            }
        })
    </script>
}

