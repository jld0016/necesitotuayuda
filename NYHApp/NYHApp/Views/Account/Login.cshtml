@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    Layout = "~/Views/Shared/TemplateModal.cshtml";
    ViewData["Title"] = "Log in";
}
<div class="modal-header">
    <label class="modal-title col-xs-8 col-md-8 col-lg-8">@NYHApp.Resources.Account.Resource.Login</label>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="padding">
        <div class="form-group">
            @Html.EditorFor(model => model.User, new { htmlAttributes = new { @class = "form-control", placeholder = NYHApp.Resources.Account.Resource.UserName } })
            @Html.ValidationMessageFor(model => model.User, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = NYHApp.Resources.Account.Resource.Password })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <div class="checkbox">
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
        </div>
        <div class="form-group">
            <a class="btn btn-primary" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Register as a new user?</a>
            <button type="submit" class="btn btn-default">@NYHApp.Resources.Account.Resource.Login</button>
        </div>
        <div class="form-group">
            <p>
                <a asp-action="ForgotPassword">Forgot your password?</a>
            </p>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
