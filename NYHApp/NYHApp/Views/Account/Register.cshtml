@model RegisterViewModel
@{
    Layout = "/Views/Shared/TemplateModal.cshtml";
    ViewData["Title"] = "Register";
}
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-group", id = "MainForm" }))
