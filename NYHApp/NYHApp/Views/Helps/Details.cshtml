@model NYHApp.Models.Help

@{
    Layout = "~/Views/Shared/TemplateModal.cshtml";
    ViewData["Title"] = "Details";
}

<div class="modal-header bg-dark text-light">
    <label class="modal-title col-xs-8 col-md-8 col-lg-8">@Model.Title</label>
    <button type="button" class="close text-light" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    @if (User.IsInRole("User") || User.IsInRole("Enterprise"))
    {
        <div class="row">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-xs-12 col-md-12 col-lg-12" })
            <span class="col-xs-12 col-md-12 col-lg-12 pt-0">@Html.DisplayFor(model => model.Description)</span>
        </div>
        <div class="form-row">
            <div class="form-group col-xs-12 col-md-2 col-lg-2">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsMansonry" /> @Html.DisplayNameFor(model => model.IsMansonry)
                    </label>
                </div>
            </div>
            <div class="form-group col-xs-12 col-md-2 col-lg-2">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsPainting" /> @Html.DisplayNameFor(model => model.IsPainting)
                    </label>
                </div>
            </div>
            <div class="form-group col-xs-12 col-md-2 col-lg-2">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsNewWork" /> @Html.DisplayNameFor(model => model.IsNewWork)
                    </label>
                </div>
            </div>
            <div class="form-group col-xs-12 col-md-2 col-lg-2">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsExtension" /> @Html.DisplayNameFor(model => model.IsExtension)
                    </label>
                </div>
            </div>
            <div class="form-group col-xs-12 col-md-2 col-lg-2">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsReform" /> @Html.DisplayNameFor(model => model.IsReform)
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-12 col-lg-12" id="listImages">
                @if (Model.Photos != null)
                {
                    @foreach (var item in Model.Photos)
                    {
                        <img src="@item.Path" class="thumb" alt="@item.FileName">
                    }
                }
            </div>
        </div>
    }
    @if (User.IsInRole("User"))
    {
        <div class="row">
            @Html.LabelFor(model => model.Address, new { @class = "control-label col-xs-12 col-md-12 col-lg-12" })
            <span class="col-xs-12 col-md-12 col-lg-12 pt-0">@Html.DisplayFor(z => z.TypeRoad.Name) @Html.DisplayFor(z => z.Address) @Html.DisplayFor(z => z.Number) @Html.DisplayFor(z => z.Floor) @Html.DisplayFor(z => z.Door) @Html.DisplayFor(z => z.UnstructuredAddress)</span>
        </div>
        <div class="row">
            @Html.Label("", NYHApp.Resources.Help.Resource.Contact, new { @class = "control-label col-xs-12 col-md-12 col-lg-12" })
            <div class="col-xs-12 col-md-12 col-lg-12">
                @Html.LabelFor(model => model.Phone1): <span>@Html.DisplayFor(model => model.Phone1)</span>
                @if (Model.Phone2 != null)
                {
                    @Html.LabelFor(model => model.Phone2) <span>: @Html.DisplayFor(model => model.Phone2)</span>
                }
            </div>
        </div>
        <div class=""></div>
    }
</div>
<div class="modal-footer">
    <a class="btn btn-secondary" data-dismiss="modal">@NYHApp.Resources.Shared.Resource.Close</a>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#modalActive').find(".modal-dialog").addClass('modal-lg');
        })
    </script>
}