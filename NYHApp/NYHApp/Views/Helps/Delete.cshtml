@model NYHApp.Models.Help

@{
    Layout = "/Views/Shared/TemplateModal.cshtml";
    ViewData["Title"] = "Delete";
}

@using (Html.BeginForm("Delete", "Helps", FormMethod.Post, new { @class = "form-group", id = "DeleteForm"}))
{
    @Html.HiddenFor(model => model.IdHelp)
    <div class="modal-header bg-dark text-light">
        <label class="modal-title col-xs-8 col-md-8 col-lg-8">@NYHApp.Resources.Shared.Resource.Remove</label>
        <button type="button" class="close text-light" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            @NYHApp.Resources.Shared.Resource.AreYouSure @Model.Title ?
        </div>
    </div>
    <div class="modal-footer">
        <div class="form-group">
            <a class="btn btn-secondary border-dark" data-dismiss="modal">@NYHApp.Resources.Shared.Resource.Cancel</a>
            <button type="submit" class="btn btn-danger">@NYHApp.Resources.Shared.Resource.Remove</button>
        </div>
    </div>
}